{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "noEmitOnError": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "lib": ["ESNext"],
        "target": "ESNext",

        "moduleResolution": "Node",
        "module": "ESNext",

        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
